    "deploy-frontend": "yarn workspace @alexandria/web-client-v2 deploy && yarn workspace @alexandria/infrastructure invalidate-frontend"
  },
  "workspaces": [
    "packages/functions",
    "packages/web-client",
    "packages/web-client-v2",
    "packages/infrastructure"
  ],
  "devDependencies": {}
}
